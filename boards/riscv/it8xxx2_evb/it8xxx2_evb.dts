/dts-v1/;

#include <it8xxx2_evb.dtsi>

/ {
	model = "IT8XXX2 EV-Board";
	compatible = "riscv, it8xxx2_evb";
	aliases {
		led0 = &room_led;
		sw0 = &room_sw;
	};
	chosen {
		zephyr,console = &uart1;
		zephyr,shell-uart = &uart1;
		zephyr,bt-uart = &uart2;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
		zephyr,flash-controller = &flashctrl;
		zephyr,code-partition = &slot0_partition;
	};
	leds {
		compatible = "gpio-leds";

		room_led: led_0 {
			gpios = <&gpiof 6 0>;
			label = "Room LED";
			status = "okay";
		};
	};
	keys {
		compatible = "gpio-keys";

		room_sw: sw_0 {
			gpios = <&gpiof 5 0>;
			label = "Room Switch";
			status = "okay";
		};
	};
};
&gpiob {
	status = "okay";
};
&uart1 {
	status = "okay";
	current-speed = <115200>;
	clock-frequency = <115200>;
};
&uart2 {
	status = "okay";
	current-speed = <460800>;
	clock-frequency = <460800>;
};
&flash0 {
	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;
		boot_partition: partition@0 {
			label = "mcuboot";
			reg = <0x00000000 0x20000>;
		};
		slot0_partition: partition@20000 {
			label = "image-0";
			reg = <0x00020000 0x20000>;
		};
		slot1_partition: partition@40000 {
			label = "image-1";
			reg = <0x00040000 0x10000>;
		};
		scratch_partition: partition@50000 {
			label = "image-scratch";
			reg = <0x00050000 0x10000>;
		};
		storage_partition: partition@60000 {
			label = "storage";
			reg = <0x00060000 0x20000>;
		};
	};
};
